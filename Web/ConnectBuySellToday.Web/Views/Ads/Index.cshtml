@model IEnumerable<ConnectBuySellToday.Application.DTOs.AdDto>

@{
    ViewData["Title"] = "Fresh Recommendations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Fresh recommendations</h2>
        <a asp-action="Create" class="btn btn-outline-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i> + SELL
        </a>
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" name="searchQuery" class="form-control" 
                               placeholder="Search for items..." 
                               value="@Context.Request.Query["searchQuery"]" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select" 
                            onchange="this.form.submit()">
                        <option value="">All Categories</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="number" name="radiusInKm" class="form-control" 
                               placeholder="Radius (km)" 
                               value="@ViewBag.RadiusInKm" min="1" max="500" />
                        <span class="input-group-text">km</span>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-primary w-100" onclick="getUserLocation()">
                        <i class="bi bi-geo-alt"></i> My Location
                    </button>
                </div>
                <!-- Hidden fields for location coordinates -->
                <input type="hidden" id="userLat" name="userLat" value="@ViewBag.UserLat" />
                <input type="hidden" id="userLong" name="userLong" value="@ViewBag.UserLong" />
            </form>
            @if (ViewBag.UserLat != null && ViewBag.UserLong != null)
            {
                <div class="mt-2">
                    <span class="badge bg-success">
                        <i class="bi bi-geo-alt-fill"></i> Location: @ViewBag.UserLat.ToString("F4"), @ViewBag.UserLong.ToString("F4")
                    </span>
                    <a asp-action="Index" asp-route-searchQuery="@Context.Request.Query["searchQuery"]" asp-route-categoryId="@Context.Request.Query["categoryId"]" class="btn btn-sm btn-outline-danger ms-2">
                        <i class="bi bi-x-circle"></i> Clear Location
                    </a>
                </div>
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h4 class="text-muted">No items found</h4>
            <p class="text-muted">Try adjusting your search or filters</p>
            <a asp-action="Create" class="btn btn-primary">Post the first ad</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            @foreach (var ad in Model)
            {
                <div class="col">
                    <partial name="_AdCard" model="ad" />
                </div>
            }
        </div>
    }
</div>
