@model IEnumerable<ConnectBuySellToday.Application.DTOs.AdDto>

@{
    ViewData["Title"] = "Moderation Queue";
}

<div class="container">
    <h1 class="mb-4"><i class="bi bi-shield-check me-2"></i>Moderation Queue</h1>
    <p class="text-muted mb-4">Review and moderate pending ads before they go live.</p>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No pending ads to review. All caught up!
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="moderationTable" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Thumbnail</th>
                                <th>Title</th>
                                <th>Seller</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ad in Model)
                            {
                                <tr id="ad-row-@ad.Id">
                                    <td>
                                        @if (!string.IsNullOrEmpty(ad.MainImageUrl))
                                        {
                                            <img src="@ad.MainImageUrl" alt="@ad.Title" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 80px; height: 60px;">
                                                <i class="bi bi-image fs-4"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@ad.Title</strong><br>
                                        <small class="text-muted">@ad.CategoryName</small>
                                    </td>
                                    <td>@ad.SellerName</td>
                                    <td>@ad.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-success btn-sm" onclick="approveAd('@ad.Id')">
                                                <i class="bi bi-check-circle me-1"></i>Approve
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@ad.Id">
                                                <i class="bi bi-x-circle me-1"></i>Reject
                                            </button>
                                            <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" class="btn btn-info btn-sm" target="_blank">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Rejection Reason Modal -->
                                <div class="modal fade" id="rejectModal-@ad.Id" tabindex="-1" aria-labelledby="rejectModalLabel-@ad.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="rejectModalLabel-@ad.Id">
                                                    <i class="bi bi-x-circle me-2"></i>Reject Ad: @ad.Title
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Quick Select Reason</label>
                                                    <select id="reasonSelect-@ad.Id" class="form-select mb-2" onchange="document.getElementById('reasonText-@ad.Id').value = this.value">
                                                        <option value="">-- Common reasons --</option>
                                                        <option value="Spam or misleading content">Spam or misleading content</option>
                                                        <option value="Prohibited item">Prohibited item</option>
                                                        <option value="Inappropriate content">Inappropriate content</option>
                                                        <option value="Misleading information">Misleading information</option>
                                                        <option value="Duplicate listing">Duplicate listing</option>
                                                        <option value="Poor quality images">Poor quality images</option>
                                                        <option value="Incorrect category">Incorrect category</option>
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Reason for Rejection</label>
                                                    <textarea id="reasonText-@ad.Id" name="reason" class="form-control" rows="3" placeholder="Enter the reason for rejection..." required></textarea>
                                                </div>
                                                <div class="alert alert-warning">
                                                    <i class="bi bi-info-circle me-2"></i>
                                                    The seller will be notified about the rejection reason via message.
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-danger" onclick="rejectAd('@ad.Id')">
                                                    <i class="bi bi-x-circle me-1"></i>Reject Ad
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#moderationTable').DataTable({
                language: {
                    search: "Search ads:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ pending ads",
                    emptyTable: "No pending ads found"
                },
                columnDefs: [
                    { orderable: false, targets: [0, 4] }
                ]
            });
        });

        function approveAd(adId) {
            if (!confirm('Are you sure you want to approve this ad?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("ApproveAdAjax", "Admin")',
                type: 'GET',
                data: { id: adId },

                success: function(response) {
                    if (response.success) {
                        toastr.success('Ad has been approved successfully!', 'Success');
                        // Remove the row from the table
                        $('#ad-row-' + adId).fadeOut(400, function() {
                            $(this).remove();
                            // Check if table is empty
                            if ($('#moderationTable tbody tr').length === 0) {
                                location.reload();
                            }
                        });
                    } else {
                        toastr.error(response.message || 'Failed to approve ad.', 'Error');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while approving the ad.', 'Error');
                }
            });
        }

        function rejectAd(adId) {
            var reason = $('#reasonText-' + adId).val().trim();
            
            if (!reason) {
                toastr.warning('Please provide a reason for rejection.', 'Warning');
                return;
            }

            $.ajax({
                url: '@Url.Action("RejectAdAjax", "Admin")',
                type: 'POST',
                data: { id: adId, reason: reason },

                success: function(response) {
                    if (response.success) {
                        toastr.success('Ad has been rejected successfully!', 'Success');
                        // Close the modal
                        $('#rejectModal-' + adId).modal('hide');
                        // Remove the row from the table
                        $('#ad-row-' + adId).fadeOut(400, function() {
                            $(this).remove();
                            // Check if table is empty
                            if ($('#moderationTable tbody tr').length === 0) {
                                location.reload();
                            }
                        });
                    } else {
                        toastr.error(response.message || 'Failed to reject ad.', 'Error');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while rejecting the ad.', 'Error');
                }
            });
        }
    </script>
}
