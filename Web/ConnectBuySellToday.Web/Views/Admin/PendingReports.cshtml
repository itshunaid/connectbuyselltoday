@model IEnumerable<ConnectBuySellToday.Application.DTOs.ReportAdDto>

@using ConnectBuySellToday.Domain.Enums

@{
    ViewData["Title"] = "Pending Reports";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Pending Reports</h1>
        <div>
            <a asp-action="Reports" class="btn btn-outline-secondary">All Reports</a>
            <a asp-action="Index" class="btn btn-outline-primary">Dashboard</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">
                    No pending reports. Great job!
                </div>
            </div>
        }
        else
        {
            @foreach (var report in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                            <span><strong>Report #@report.Id.ToString().Substring(0, 8)</strong></span>
                            <span class="badge bg-dark">@report.Status</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-controller="Ads" asp-action="Details" asp-route-id="@report.AdId" target="_blank">
                                    @report.AdTitle
                                </a>
                            </h5>
                            <p class="card-text">
                                <strong>Reporter:</strong> @report.ReporterName<br>
                                <strong>Reason:</strong> <span class="badge bg-@GetReasonBadgeColor(report.Reason)">@report.Reason</span><br>
                                <strong>Reported:</strong> @report.CreatedAt.ToString("MM/dd/yyyy HH:mm")
                            </p>
                            <hr>
                            <p class="card-text">
                                <strong>Description:</strong><br>
                                @report.Description
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a asp-action="ReportDetails" asp-route-id="@report.Id" class="btn btn-info">View Details</a>
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#resolveModal_@report.Id">
                                    Resolve
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Resolve Modal -->
                    <div class="modal fade" id="resolveModal_@report.Id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="ResolveReport" method="post">
                                    <input type="hidden" name="id" value="@report.Id" />
                                    <div class="modal-header">
                                        <h5 class="modal-title">Resolve Report</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Resolution Status</label>
                                            <select name="status" class="form-select" required>
                                                <option value="@ReportStatus.Resolved">Resolved - Action Taken</option>
                                                <option value="@ReportStatus.Reviewed">Reviewed - No Action Needed</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Admin Notes</label>
                                            <textarea name="adminNotes" class="form-control" rows="3" placeholder="Add notes about this resolution..."></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-success">Resolve Report</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@{
    string GetReasonBadgeColor(ReportReason reason)
    {
        return reason switch
        {
            ReportReason.Spam => "secondary",
            ReportReason.Inappropriate => "danger",
            ReportReason.Fraud => "warning",
            ReportReason.Misleading => "info",
            ReportReason.Other => "light",
            _ => "secondary"
        };
    }
}
