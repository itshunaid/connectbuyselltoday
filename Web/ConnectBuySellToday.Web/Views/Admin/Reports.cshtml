@model IEnumerable<ConnectBuySellToday.Application.DTOs.ReportAdDto>

@using ConnectBuySellToday.Domain.Enums

@{
    ViewData["Title"] = "Ad Reports";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ad Reports</h1>
        <div>
            <a asp-action="PendingReports" class="btn btn-warning">Pending Reports</a>
            <a asp-action="Reports" asp-route-status="" class="btn btn-outline-secondary">All Reports</a>
        </div>
    </div>

    <!-- Filter -->
    <div class="mb-3">
        <div class="btn-group" role="group">
            <a asp-action="Reports" asp-route-status="" class="btn btn-outline-primary">All</a>
            <a asp-action="Reports" asp-route-status="@((int)ReportStatus.Pending)" class="btn btn-outline-warning">Pending</a>
            <a asp-action="Reports" asp-route-status="@((int)ReportStatus.Reviewed)" class="btn btn-outline-info">Reviewed</a>
            <a asp-action="Reports" asp-route-status="@((int)ReportStatus.Resolved)" class="btn btn-outline-success">Resolved</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Report ID</th>
                    <th>Ad Title</th>
                    <th>Reporter</th>
                    <th>Reason</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center py-4">No reports found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.Id.ToString().Substring(0, 8)...</td>
                            <td>
                                <a asp-controller="Ads" asp-action="Details" asp-route-id="@report.AdId" target="_blank">
                                    @report.AdTitle
                                </a>
                            </td>
                            <td>@report.ReporterName</td>
                            <td>
                                <span class="badge bg-@GetReasonBadgeColor(report.Reason)">
                                    @report.Reason
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#descModal_@report.Id">
                                    View
                                </button>
                                <div class="modal fade" id="descModal_@report.Id" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Report Description</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>@report.Description</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-@GetStatusBadgeColor(report.Status)">
                                    @report.Status
                                </span>
                            </td>
                            <td>@report.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="ReportDetails" asp-route-id="@report.Id" class="btn btn-sm btn-info">Details</a>
                                    @if (report.Status == ReportStatus.Pending)
                                    {
                                        <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#resolveModal_@report.Id">
                                            Resolve
                                        </button>
                                        <div class="modal fade" id="resolveModal_@report.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <form asp-action="ResolveReport" method="post">
                                                        <input type="hidden" name="id" value="@report.Id" />
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Resolve Report</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label class="form-label">Resolution Status</label>
                                                                <select name="status" class="form-select" required>
                                                                    <option value="@ReportStatus.Resolved">Resolved - Action Taken</option>
                                                                    <option value="@ReportStatus.Reviewed">Reviewed - No Action Needed</option>
                                                                </select>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Admin Notes</label>
                                                                <textarea name="adminNotes" class="form-control" rows="3" placeholder="Add notes about this resolution..."></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-success">Resolve Report</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@{
    string GetReasonBadgeColor(ReportReason reason)
    {
        return reason switch
        {
            ReportReason.Spam => "secondary",
            ReportReason.Inappropriate => "danger",
            ReportReason.Fraud => "warning",
            ReportReason.Misleading => "info",
            ReportReason.Other => "light",
            _ => "secondary"
        };
    }

    string GetStatusBadgeColor(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "warning",
            ReportStatus.Reviewed => "info",
            ReportStatus.Resolved => "success",
            _ => "secondary"
        };
    }
}
