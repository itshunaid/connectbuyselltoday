@model IEnumerable<ConnectBuySellToday.Application.DTOs.ConversationDto>

@{
    ViewData["Title"] = "My Chats";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-chat-dots me-2"></i>My Conversations</h2>
        <a asp-controller="Ads" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-search me-2"></i>Browse Ads
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-3">
            @foreach (var conversation in Model)
            {
                <div class="col-12">
                    <a asp-action="Chat" asp-route-adId="@conversation.AdId" asp-route-otherUserId="@conversation.OtherUserId" 
                       class="text-decoration-none">
                        <div class="card border-0 shadow-sm chat-card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 me-3">
                                        @if (!string.IsNullOrEmpty(conversation.AdImageUrl))
                                        {
                                            <img src="@conversation.AdImageUrl" alt="@conversation.AdTitle" 
                                                 class="rounded" style="width: 70px; height: 70px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                                 style="width: 70px; height: 70px;">
                                                <i class="bi bi-image text-white fs-4"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="flex-grow-1 min-width-0">
                                        <div class="d-flex justify-content-between align-items-start mb-1">
                                            <h6 class="text-dark mb-0 text-truncate fw-bold">@conversation.AdTitle</h6>
                                            <small class="text-muted">@conversation.LastMessageTime.ToString("MMM dd, HH:mm")</small>
                                        </div>
                                        <p class="text-muted mb-2 text-truncate">@conversation.LastMessage</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-person me-1"></i>Chat with: @conversation.OtherUserId
                                            </small>
                                            @if (conversation.UnreadCount > 0)
                                            {
                                                <span class="badge bg-primary rounded-pill">
                                                    <i class="bi bi-envelope me-1"></i>@conversation.UnreadCount unread
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0 ms-3">
                                        <i class="bi bi-chevron-right text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-chat-square-text fs-1 text-muted mb-3"></i>
                <h4 class="text-muted">No conversations yet</h4>
                <p class="text-muted mb-4">Start browsing ads and contact sellers to begin conversations!</p>
                <a asp-controller="Ads" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-search me-2"></i>Browse Ads
                </a>
            </div>
        </div>
    }
</div>

<style>
    .chat-card {
        transition: all 0.3s ease;
    }
    
    .chat-card:hover {
        transform: translateX(5px);
        background-color: #f8f9fa;
    }
    
    .min-width-0 {
        min-width: 0;
    }
</style>
