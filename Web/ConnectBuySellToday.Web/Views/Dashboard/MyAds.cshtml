@model IEnumerable<ConnectBuySellToday.Application.DTOs.AdDto>

@{
    ViewData["Title"] = "My Ads";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-collection me-2"></i>My Ads</h2>
        <a asp-controller="Ads" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Ad
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Image</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Posted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ad in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        @if (!string.IsNullOrEmpty(ad.MainImageUrl))
                                        {
                                            <img src="@ad.MainImageUrl" alt="@ad.Title" 
                                                 class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                                 style="width: 60px; height: 60px;">
                                                <i class="bi bi-image text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" 
                                           class="text-decoration-none text-dark fw-medium">
                                            @ad.Title
                                        </a>
                                        @if (ad.IsFeatured && ad.FeaturedExpiryDate > DateTime.UtcNow)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">
                                                <i class="bi bi-star-fill"></i> Featured
                                            </span>
                                        }
                                    </td>
                                    <td class="text-success fw-bold">â‚¹@ad.Price.ToString("N0")</td>
                                    <td>@ad.CategoryName</td>
                                    <td>
                                        @switch (ad.Status)
                                        {
                                            case ConnectBuySellToday.Domain.Enums.AdStatus.Active:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                                break;
                                            case ConnectBuySellToday.Domain.Enums.AdStatus.PendingReview:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-clock me-1"></i>Pending
                                                </span>
                                                break;
                                            case ConnectBuySellToday.Domain.Enums.AdStatus.Sold:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-bag-check me-1"></i>Sold
                                                </span>
                                                break;
                                            case ConnectBuySellToday.Domain.Enums.AdStatus.Rejected:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Rejected
                                                </span>
                                                break;
                                            case ConnectBuySellToday.Domain.Enums.AdStatus.Hidden:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-eye-slash me-1"></i>Hidden
                                                </span>
                                                break;
                                            case ConnectBuySellToday.Domain.Enums.AdStatus.Expired:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-clock-history me-1"></i>Expired
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@ad.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@ad.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" 
                                               class="btn btn-sm btn-outline-primary" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (ad.Status == ConnectBuySellToday.Domain.Enums.AdStatus.Active)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-success" title="Mark as Sold"
                                                        onclick="markAsSold('@ad.Id')">
                                                    <i class="bi bi-bag-check"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                <h4 class="text-muted">No ads yet</h4>
                <p class="text-muted mb-4">You haven't posted any ads yet. Start selling today!</p>
                <a asp-controller="Ads" asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Post Your First Ad
                </a>
            </div>
        </div>
    }
</div>

<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .btn-group .btn {
        border-radius: 0;
    }
    
    .btn-group .btn:first-child {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
    
    .btn-group .btn:last-child {
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }
</style>

<script>
    function markAsSold(adId) {
        if (confirm('Are you sure you want to mark this item as sold?')) {
            fetch(`/Ads/MarkAsSold/${adId}`, {
                method: 'POST',
                headers: {
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            }).then(response => {
                if (response.ok) {
                    location.reload();
                }
            });
        }
    }
</script>
