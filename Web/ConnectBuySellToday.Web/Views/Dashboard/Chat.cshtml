@model ChatViewModel

@{
    ViewData["Title"] = "Chat - " + Model.AdTitle;
    var conversationId = ViewBag.ConversationId;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <!-- Chat Header -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <a asp-controller="Dashboard" asp-action="MyChats" class="btn btn-outline-secondary me-3">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <div>
                            <h5 class="mb-0 fw-bold">@Model.AdTitle</h5>
                            <small class="text-muted">
                                <i class="bi bi-person me-1"></i>Chatting with: @Model.OtherUserId
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chat Messages -->
            <div class="card border-0 shadow-sm">
                <div class="chat-messages card-body p-3" id="chatMessages" style="height: 400px; overflow-y: auto;">
                    @if (Model.Messages.Any())
                    {
                        @foreach (var message in Model.Messages)
                        {
                            <div class="chat-message @(message.SenderId == Model.CurrentUserId ? "sender" : "receiver") mb-3">
                                <div class="message-bubble @(message.SenderId == Model.CurrentUserId ? "bg-primary text-white" : "bg-light")">
                                    <p class="mb-1">@message.Content</p>
                                    <small class="message-meta @(message.SenderId == Model.CurrentUserId ? "text-white-50" : "text-muted")">
                                        @message.CreatedAt.ToString("MMM dd, HH:mm")
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-chat-dots fs-1 mb-3"></i>
                            <p>No messages yet. Start the conversation!</p>
                        </div>
                    }
                    <!-- Typing Indicator -->
                    <div id="typingIndicator" class="chat-message receiver mb-3" style="display: none;">
                        <div class="message-bubble bg-light">
                            <p class="mb-0"><em><span id="typingUserName">Someone</span> is typing...</em></p>
                        </div>
                    </div>
                </div>
                
                <!-- Chat Input -->
                <div class="card-footer bg-white border-top-0">
                    <div class="chat-input-wrapper d-flex gap-2">
                        <input type="text" id="messageInput" class="form-control rounded-pill" 
                               placeholder="Type a message..." />
                        <button id="sendButton" class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-send"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ad Details Sidebar -->
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h6 class="fw-bold mb-0"><i class="bi bi-box me-2"></i>Ad Details</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.AdImageUrl))
                    {
                        <img src="@Model.AdImageUrl" alt="@Model.AdTitle" 
                             class="img-fluid rounded mb-3" style="max-height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center mb-3" style="height: 150px;">
                            <i class="bi bi-image text-white fs-1"></i>
                        </div>
                    }
                    <h6 class="fw-bold">@Model.AdTitle</h6>
                    <hr>
                    <a asp-controller="Ads" asp-action="Details" asp-route-id="@Model.AdId" 
                       class="btn btn-outline-primary w-100">
                        <i class="bi bi-eye me-2"></i>View Full Ad
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .chat-message {
        display: flex;
    }
    
    .chat-message.sender {
        justify-content: flex-end;
    }
    
    .chat-message.receiver {
        justify-content: flex-start;
    }
    
    .message-bubble {
        max-width: 80%;
        padding: 12px 16px;
        border-radius: 18px;
        word-wrap: break-word;
    }
    
    .chat-message.sender .message-bubble {
        border-bottom-right-radius: 4px;
    }
    
    .chat-message.receiver .message-bubble {
        border-bottom-left-radius: 4px;
    }
    
    .message-meta {
        font-size: 0.75rem;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chatHub")
            .build();

        const adId = "@Model.AdId";
        const currentUserId = "@Model.CurrentUserId";
        const otherUserId = "@Model.OtherUserId";
        const conversationId = "@conversationId";

        async function start() {
            try {
                await connection.start();
                console.log("SignalR Connected.");
                await connection.invoke("JoinConversation", conversationId);
            } catch (err) {
                console.error(err);
                setTimeout(start, 5000);
            }
        }

        function scrollToBottom() {
            const chatDiv = document.getElementById("chatMessages");
            chatDiv.scrollTop = chatDiv.scrollHeight;
        }

        function addMessageToChat(senderId, senderName, message, timestamp) {
            const chatDiv = document.getElementById("chatMessages");
            const isCurrentUser = senderId === currentUserId;
            
            const noMessages = chatDiv.querySelector('.text-center.text-muted');
            if (noMessages) {
                noMessages.remove();
            }
            
            const messageDiv = document.createElement("div");
            messageDiv.className = "chat-message " + (isCurrentUser ? "sender" : "receiver") + " mb-3";
            messageDiv.innerHTML = `
                <div class="message-bubble ${isCurrentUser ? 'bg-primary text-white' : 'bg-light'}">
                    <p class="mb-1">${message}</p>
                    <small class="message-meta ${isCurrentUser ? 'text-white-50' : 'text-muted'}">
                        ${new Date(timestamp).toLocaleString('en-IN', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' })}
                    </small>
                </div>
            `;
            chatDiv.appendChild(messageDiv);
            scrollToBottom();
        }

        connection.on("ReceiveMessage", function (data) {
            addMessageToChat(data.senderId, data.senderName, data.message, data.timestamp);
            // Hide typing indicator when a message is received
            hideTypingIndicator();
        });

        // Typing indicator functionality
        let typingTimeout;
        
        function showTypingIndicator(userName) {
            const typingIndicator = document.getElementById("typingIndicator");
            const typingUserName = document.getElementById("typingUserName");
            typingUserName.textContent = userName;
            typingIndicator.style.display = "flex";
            scrollToBottom();
            
            // Auto-hide after 3 seconds
            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(hideTypingIndicator, 3000);
        }

        function hideTypingIndicator() {
            const typingIndicator = document.getElementById("typingIndicator");
            typingIndicator.style.display = "none";
            clearTimeout(typingTimeout);
        }

        // Listen for typing events from other users
        connection.on("Typing", function (data) {
            if (data.userId !== currentUserId) {
                showTypingIndicator(data.userName);
            }
        });

        // Send typing status when user types
        const messageInput = document.getElementById("messageInput");
        let isTyping = false;

        messageInput.addEventListener("input", async function () {
            if (!isTyping && connection.state === signalR.HubConnectionState.Connected) {
                isTyping = true;
                try {
                    await connection.invoke("SendTyping", conversationId, otherUserId);
                } catch (err) {
                    console.error(err);
                }
                // Reset typing status after 2 seconds
                setTimeout(() => { isTyping = false; }, 2000);
            }
        });

        document.getElementById("sendButton").addEventListener("click", async function () {
            const messageInput = document.getElementById("messageInput");
            const message = messageInput.value;
            if (message.trim() === "") return;

            try {
                await connection.invoke("SendMessage", conversationId, otherUserId, message, currentUserId);
                messageInput.value = "";
            } catch (err) {
                console.error(err);
                try {
                    const response = await fetch('@Url.Action("SendMessage", "Dashboard")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        },
                        body: JSON.stringify({
                            adId: adId,
                            receiverId: otherUserId,
                            message: message
                        })
                    });
                    if (response.ok) {
                        messageInput.value = "";
                    }
                } catch (err2) {
                    console.error(err2);
                }
            }
        });

        document.getElementById("messageInput").addEventListener("keypress", function (e) {
            if (e.key === "Enter") {
                document.getElementById("sendButton").click();
            }
        });

        document.addEventListener("DOMContentLoaded", function() {
            scrollToBottom();
        });

        start();
    </script>
}
