@model DashboardViewModel

@using Microsoft.AspNetCore.Identity
@using ConnectBuySellToday.Domain.Entities
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Dashboard";
    var user = await UserManager.GetUserAsync(User);
    var userName = user?.FirstName ?? User.Identity?.Name ?? "User";
}

<div class="container py-4">
    <!-- Welcome Section -->
    <div class="welcome-banner bg-gradient rounded-4 p-4 mb-4 text-white">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h2 class="fw-bold mb-1"><i class="bi bi-person-circle me-2"></i>Welcome back, @userName!</h2>
                <p class="mb-0 opacity-75">Manage your ads, messages, and account settings from here.</p>
            </div>
            <a asp-controller="Ads" asp-action="Create" class="btn btn-light btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Post New Ad
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">My Active Ads</p>
                            <h3 class="fw-bold text-primary mb-0">@Model.MyAds.Count()</h3>
                        </div>
                        <div class="stat-icon bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-box-seam fs-4 text-primary"></i>
                        </div>
                    </div>
                    <a asp-action="MyAds" class="btn btn-sm btn-outline-primary mt-3 w-100">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Conversations</p>
                            <h3 class="fw-bold text-success mb-0">@Model.Conversations.Count()</h3>
                        </div>
                        <div class="stat-icon bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-chat-dots fs-4 text-success"></i>
                        </div>
                    </div>
                    <a asp-action="MyChats" class="btn btn-sm btn-outline-success mt-3 w-100">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Total Views</p>
                            <h3 class="fw-bold text-info mb-0">0</h3>
                        </div>
                        <div class="stat-icon bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-eye fs-4 text-info"></i>
                        </div>
                    </div>
                    <span class="btn btn-sm btn-outline-info mt-3 w-100 disabled">
                        Coming Soon
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Favorites</p>
                            <h3 class="fw-bold text-warning mb-0">0</h3>
                        </div>
                        <div class="stat-icon bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-heart fs-4 text-warning"></i>
                        </div>
                    </div>
                    <span class="btn btn-sm btn-outline-warning mt-3 w-100 disabled">
                        Coming Soon
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <a asp-controller="Ads" asp-action="Create" class="text-decoration-none">
                <div class="card border-0 shadow-sm quick-action-card h-100">
                    <div class="card-body text-center py-4">
                        <div class="quick-action-icon bg-primary bg-opacity-10 rounded-circle p-4 d-inline-flex mb-3">
                            <i class="bi bi-plus-circle fs-2 text-primary"></i>
                        </div>
                        <h5 class="fw-bold">Post New Ad</h5>
                        <p class="text-muted small mb-0">Create a new listing and reach thousands of buyers</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="MyAds" class="text-decoration-none">
                <div class="card border-0 shadow-sm quick-action-card h-100">
                    <div class="card-body text-center py-4">
                        <div class="quick-action-icon bg-success bg-opacity-10 rounded-circle p-4 d-inline-flex mb-3">
                            <i class="bi bi-collection fs-2 text-success"></i>
                        </div>
                        <h5 class="fw-bold">My Listings</h5>
                        <p class="text-muted small mb-0">View and manage all your posted ads</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="MyChats" class="text-decoration-none">
                <div class="card border-0 shadow-sm quick-action-card h-100">
                    <div class="card-body text-center py-4">
                        <div class="quick-action-icon bg-info bg-opacity-10 rounded-circle p-4 d-inline-flex mb-3">
                            <i class="bi bi-chat-square-text fs-2 text-info"></i>
                        </div>
                        <h5 class="fw-bold">Messages</h5>
                        <p class="text-muted small mb-0">Check your conversations with buyers</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Recent Ads Section -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="fw-bold mb-0"><i class="bi bi-clock-history me-2"></i>Recent Ads</h4>
                <a asp-action="MyAds" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.MyAds.Any())
            {
                <div class="row g-3">
                    @foreach (var ad in Model.MyAds.Take(6))
                    {
                        <div class="col-md-6 col-lg-4">
                            <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" class="text-decoration-none">
                                <div class="card border-0 bg-light h-100 ad-card">
                                    <div class="card-body p-3">
                                        <div class="d-flex gap-3">
                                            <div class="flex-shrink-0">
                                                @if (!string.IsNullOrEmpty(ad.MainImageUrl))
                                                {
                                                    <img src="@ad.MainImageUrl" alt="@ad.Title" 
                                                         class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                                         style="width: 80px; height: 80px;">
                                                        <i class="bi bi-image text-white fs-4"></i>
                                                    </div>
                                                }
                                            </div>
                                            <div class="flex-grow-1 min-width-0">
                                                <h6 class="text-dark mb-1 text-truncate">@ad.Title</h6>
                                                <p class="text-success fw-bold mb-1">â‚¹@ad.Price.ToString("N0")</p>
                                                <small class="text-muted d-block">
                                                    <span class="badge bg-@(ad.Status == ConnectBuySellToday.Domain.Enums.AdStatus.Active ? "success" : "secondary")">
                                                        @ad.Status
                                                    </span>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No ads yet</h5>
                    <p class="text-muted">Start selling by posting your first ad!</p>
                    <a asp-controller="Ads" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Post Your First Ad
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .welcome-banner {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
    }
    
    .stat-card {
        transition: all 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
    }
    
    .stat-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .quick-action-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .quick-action-card:hover {
        transform: translateY(-5px);
    }
    
    .quick-action-card:hover .quick-action-icon {
        transform: scale(1.1);
    }
    
    .quick-action-icon {
        transition: all 0.3s ease;
    }
    
    .ad-card {
        transition: all 0.3s ease;
    }
    
    .ad-card:hover {
        background-color: #e9ecef !important;
    }
    
    .min-width-0 {
        min-width: 0;
    }
</style>
