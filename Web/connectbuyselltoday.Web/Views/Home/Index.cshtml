@model IEnumerable<AdDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4">
    <h1 class="display-4">Welcome to ConnectBuySellToday</h1>
    <p>Find the best deals on products near you!</p>
</div>

@{
    var categories = ViewBag.Categories as IEnumerable<CategoryDto>;
}

@if (categories != null && categories.Any())
{
    <div class="container mb-4">
        <h5 class="mb-3">Browse by Category</h5>
        <div class="row">
            @foreach (var category in categories)
            {
                <div class="col-auto mb-2">
                    <a asp-controller="Ads" asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-outline-primary">
                        @category.Name
                    </a>
                </div>
            }
        </div>
    </div>
}

<div class="container">
    <h2 class="mb-3">Latest Ads</h2>
    
    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(ad.MainImageUrl))
                    {
                        <img src="@ad.MainImageUrl" class="card-img-top" alt="@ad.Title" style="height: 180px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 180px;">
                            <span class="text-white">No Image</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@ad.Title</h5>
                        <p class="card-text text-truncate">@ad.Description</p>
                        <h6 class="text-primary">$@ad.Price.ToString("N2")</h6>
                        <p class="text-muted"><small>@ad.CategoryName</small></p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" class="btn btn-sm btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No ads available at the moment. Check back later!
        </div>
    }
</div>
